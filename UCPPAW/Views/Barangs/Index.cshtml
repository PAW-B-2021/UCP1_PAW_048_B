@model IEnumerable<UCPPAW.Models.Barang>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("NamaBarang")
            </th>
            <th>
                @Html.DisplayName("Harga")
            </th>
            <th>
                @Html.DisplayName("StokBarang")
            </th>
            <th>
                @Html.DisplayName("IdPenjualNavigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Harga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StokBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPenjualNavigation.IdPenjual)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBarang"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdBarang"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdBarang"><i class="fas fa-trash-alt fa-lg"></a>
            </td>
        </tr>
}
    </tbody>
</table>
